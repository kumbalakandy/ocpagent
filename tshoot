apiVersion: cdi.kubevirt.io/v1beta1
kind: DataVolume
metadata:
  name: <new-pvc-name>
  namespace: <target-project>
spec:
  source:
    pvc:
      namespace: <source-project>
      name: <source-pvc-name>
  pvc:
    accessModes:
      - ReadWriteOnce # Or the appropriate access mode for your needs
    resources:
      requests:
        storage: <size-of-new-pvc> # e.g., 20Gi (can be the same size or larger)
    storageClassName: <storage-class-name> # Optional: specify a storage class

apiVersion: nmstate.io/v1
kind: NodeNetworkConfigurationPolicy
metadata:
  name: br-vm
spec:
  desiredState:
    interfaces:
      - bridge:
          allow-extra-patch-ports: true
          options:
            stp: false
          port:
            - name: bond0
        name: br-vm
        state: up
        type: ovs-bridge
    ovn:
      bridge-mappings:
        - bridge: br-vm
          localnet: vlan-122
          state: present
  nodeSelector:
    node-role.kubernetes.io/worker: ''


