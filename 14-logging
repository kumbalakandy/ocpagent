---
apiVersion: v1
kind: Namespace
metadata:
  name: openshift-logging
  labels:
    openshift.io/cluster-monitoring: "true"


---
apiVersion: operators.coreos.com/v1
kind: OperatorGroup
metadata:
  name: cluster-logging
  namespace: openshift-logging 
spec:
  upgradeStrategy: Default

---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: cluster-logging
  namespace: openshift-logging 
spec:
  channel: stable-6.3
  installPlanApproval: Automatic 
  name: cluster-logging
  source: redhat-operators 
  sourceNamespace: openshift-marketplace

---
apiVersion: logging.openshift.io/v1
kind: ClusterLogForwarder
metadata:
  name: instance 
  namespace: openshift-logging 
spec:
  outputs:
   - name: kv-lab-syslog 
     type: syslog 
     syslog: 
       facility: local0
       rfc: RFC3164
       payloadKey: message
       severity: debug
	   addLogSource: true
     url: 'udp://172.21.45.241:514' 
  pipelines:
   - name: kv-lab-syslog
     inputRefs:
     - infrastructure
     - audit
     - application
     outputRefs:
     - kv-lab-syslog
     - default
     labels:
       syslog: "lab-syslog"


oc create sa logging-collector -n openshift-logging


oc adm policy add-cluster-role-to-user logging-collector-logs-writer -z logging-collector -n openshift-logging
oc adm policy add-cluster-role-to-user collect-application-logs -z logging-collector -n openshift-logging
oc adm policy add-cluster-role-to-user collect-infrastructure-logs -z logging-collector -n openshift-logging


apiVersion: logging.openshift.io/v1
kind: ClusterLogForwarder
metadata:
  name: instance 
  namespace: openshift-logging 
spec:
  outputs:
   - name: kv-lab-syslog <-----
     type: syslog 
     syslog: 
       facility: user
       rfc: RFC5424
       payloadKey: message
       severity: debug
       enrichment: KubernetesMinimal
     url: 'udp://172.21.45.241:514' <-----
  filters:
  - kubeAPIAudit:
      omitStages:
      - RequestReceived
      rules:
      - level: Request # This rule adds visibility into failed login attempts by tracking authentication decisions 
        users: ["system:anonymous"]
        nonResourceURLs:
        - "/oauth/authorize*"
        verbs: ["get"]
      - level: None # This rule excludes all system users
        users:
        - "system:*"
      - level: Request # This rule is to track "create", "patch" and "delete" actions for any user, verbs "get" and "list" can be added if desired. Logouts are included since a logout is essentially a user deleting its own oauthaccesstokens
        verbs: ["create", "patch", "delete"]
      - level: Request # This rule allows to filter creations of oauthaccesstokens (in other words - successful logins)
        users:
        - "system:serviceaccount:openshift-authentication:oauth-openshift"
        verbs: ["create"]
        resources:
        - group: "oauth.openshift.io"
          resources: ["oauthaccesstokens"]
      - level: None # Lastly, this rule filters out everything else
    name: my-policy <-----
    type: kubeAPIAudit
  inputs:
  - name: selected-audit-logs <-----
    audit:
      sources: # Specifying sources to filter out node level events and OVN logs
      - kubeAPI
      - openshiftAPI
  pipelines:
   - name: kv-lab-syslog <-----
     inputRefs:
     - selected-audit-logs <-----
     outputRefs:
     - kv-lab-syslog <-----
     filterRefs:
     - my-policy
     labels:
       syslog: "lab-syslog" <-----
